# Database
MONGODB_URI=mongodb://localhost:27017/vyral_cms

# Authentication
NEXTAUTH_SECRET=your-super-secret-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000
JWT_SECRET=your-jwt-secret-for-core-package

# File Upload
UPLOAD_DIR=./public/uploads
MAX_FILE_SIZE=10485760

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Google Analytics (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_VERIFICATION=your-google-verification-code

# Social (optional)
NEXT_PUBLIC_TWITTER_HANDLE=@vyralcms
NEXT_PUBLIC_GITHUB_URL=https://github.com/vyral/vyral-cms

# Redis (optional - for production caching)
REDIS_URL=redis://localhost:6379

# Development
NODE_ENV=development