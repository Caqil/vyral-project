{
  "name": "vyral-cms",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/ui",
    "plugins/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "install:clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules plugins/*/node_modules && pnpm install"
  },
  "devDependencies": {
    "turbo": "^1.10.16",
    "typescript": "^5.8.3",
    "@vyral/ui": "workspace:*"
  },
  "packageManager": "pnpm@10.12.1"
}